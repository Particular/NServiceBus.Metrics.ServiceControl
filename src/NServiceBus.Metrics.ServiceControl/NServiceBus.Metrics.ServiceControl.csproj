<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net472;net6.0</TargetFrameworks>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>..\NServiceBus.snk</AssemblyOriginatorKeyFile>
    <Description>Plugin for sending endpoint monitoring data to a ServiceControl Monitoring instance</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="NServiceBus" Version="[8.0.0-rc.3, 9.0.0)" />
    <PackageReference Include="NServiceBus.Metrics" Version="[4.0.0-rc.2, 5.0.0)" />
    <PackageReference Include="Particular.Packaging" Version="2.2.0" PrivateAssets="All" />
    <PackageReference Include="ServiceControl.Monitoring.Data" Version="3.0.0" PrivateAssets="All" />
  </ItemGroup>

</Project>
