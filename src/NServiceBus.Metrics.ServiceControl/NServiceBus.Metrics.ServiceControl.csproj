<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net452;netstandard2.0</TargetFrameworks>
    <OutputPath>..\..\binaries\</OutputPath>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="ILRepack" Version="2.0.13" />
    <PackageReference Include="NServiceBus" Version="7.0.0-beta0007" />
    <PackageReference Include="NServiceBus.Metrics" Version="3.0.0-rc0002" />
    <PackageReference Include="ServiceControl.Monitoring.Data" Version="1.1.0" PrivateAssets="All" />
  </ItemGroup>
  
  <Target Name="MergeDependencies" AfterTargets="CopyFilesToOutputDirectory">
    <PropertyGroup>
      <TempFolder>$(ProjectDir)$(OutputPath)temp</TempFolder>
    </PropertyGroup>
    <MakeDir Directories="$(TempFolder)" />
    <Exec Condition="'$(TargetFramework)' == 'netstandard2.0'" Command="&quot;$(ILRepack)&quot; /out:&quot;$(TempFolder)\$(AssemblyName).dll&quot; &quot;$(TargetDir)$(AssemblyName).dll&quot; &quot;$(TargetDir)ServiceControl.Monitoring.Data.dll&quot; /targetplatform:v4 /internalize /lib:&quot;C:\Program Files\dotnet\sdk\NuGetFallbackFolder\netstandard.library\2.0.0\build\netstandard2.0\ref&quot;" />
    <Exec Condition="'$(TargetFramework)' != 'netstandard2.0'" Command="&quot;$(ILRepack)&quot; /out:&quot;$(TempFolder)\$(AssemblyName).dll&quot; &quot;$(TargetDir)$(AssemblyName).dll&quot; &quot;$(TargetDir)ServiceControl.Monitoring.Data.dll&quot; /targetplatform:v4 /internalize" />
    <ItemGroup>
      <TempFiles Include="$(TempFolder)\*.*" />
    </ItemGroup>
    <Copy SourceFiles="@(TempFiles)" DestinationFolder="$(OutputPath)" OverwriteReadOnlyFiles="true" />
    <Delete Files="@(TempFiles)" />
    <RemoveDir Directories="$(TempFolder)" />
  </Target>
  
</Project>