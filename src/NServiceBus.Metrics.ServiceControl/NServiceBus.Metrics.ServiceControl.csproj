<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net452;netstandard2.0</TargetFrameworks>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>..\NServiceBus.snk</AssemblyOriginatorKeyFile>
    <Description>Plugin for sending endpoint monitoring data to a ServiceControl Monitoring instance</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="NServiceBus" Version="[7.0.1, 8.0.0)" />
    <PackageReference Include="NServiceBus.Metrics" Version="[3.0.0, 4.0.0)" />
    <PackageReference Include="Particular.Packaging" Version="0.6.1" PrivateAssets="All" />
    <PackageReference Include="ServiceControl.Monitoring.Data" Version="2.1.1" PrivateAssets="All" />
  </ItemGroup>

</Project>